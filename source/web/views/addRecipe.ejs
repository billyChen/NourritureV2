<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="icon" href="../../favicon.ico">
    <link href="/bootstrap-3.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/form.css" rel="stylesheet">

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <title><%= title %></title>
  </head>

  <body>
    <!-- user connected -->
    <%- include('ConnectedHeader.ejs') %>

      <div style="padding-top: 8%;">
        <div class="container">
          <div class="row">

            <div class="col-sm-2 col-lg-2">
            </div>
            
            <div class="col-sm-9 col-lg-9">
              <div class="dash-unit">

                <form action="#" method="post">
                   <h1 style="text-align: center;"><%= title %></h1>
                   <br>
                    <div class="field">
                      <label for="title">Title :</label>
                      <input type="text" class="name">
                    </div>

                    <div class="field">
                      <label for="mail">Type :</label>
                      <input type="text" class="name">
                    </div>

                    <div class="field">
                      <input type="file" id="photo" name="photo">
                    </div>

                    <div class="field">
                      <label for="ingredients">Ingredients :</label>
                      <select name="ingredients">
                        <option>Sugar</option>
                        <option>Salt</option>
                        <option>Milk</option>
                      </select>
                    </div>

                    <div class="field">
                      <label for="time">Time :</label>
                      <select name="cookingTime">
                        <option>0mn - 10mn</option>
                        <option>10mn - 20mn</option>
                        <option>30mn - 1h</option>
                        <option> > 1h</option>
                      </select>
                    </div>

                    <div class="field">
                      <label for="msg">Description :</label>
                      <textarea id="recipeField"></textarea>
                    </div>
                   
                    <div class="button">
                      <button type="submit">Save recipe</button>
                    </div>
                </form>
              </div>
            </div>
            
            </div>
        </div>
      </div>
  </body>
</html>

