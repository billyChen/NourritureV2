<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <link rel="icon" href="../../favicon.ico">
  <link href="/stylesheets/createUser.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/plugins/tokenize/jquery.tokenize.css" />
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
      <![endif]-->

      <link rel="stylesheet" href="/bootstrap-tagsinput-master/dist/bootstrap-tagsinput.css" />

      <title><%= title %></title>
    </head>

    <body>

      <!-- user not connected -->
      <%- include('NoConnectedHeader.ejs') %>

      <div class="middlePage">
        <div class="page-header">
          <h1 class="logo">Nourriture <small>Welcome to your kitchen!</small></h1>
        </div>

        <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title"><%= title %></h3>
          </div>

          <div class="panel-body">
            <div class="row">
              <div class="col-md-7">
                <form class="form-horizontal" action="/insertUserData" method="post">
                  <fieldset>
                   <!--<div id="all">-->
                   <div class="field">
                    <label for="name">Username :</label>
                    <input id="textinput" name="username" type="text" class="form-control input-md" style="width: 80%;">
                  </div>
                  <div class="field">
                    <label for="gender">Gender :</label>
                    <input type="radio" name="gender" value="male"> male</input>
                    <input type="radio" name="gender" value="female"> female</input>
                  </div>
                  <div class="field">
                    <label for="allergic">Allergic food :</label>
                    <select id="tokenize_nonewelement" name="allergens" multiple="multiple" class="tokenize-sample">
                      <% for (var i = 0; i < allergens.length; i++) { %>
                      <option value="<%= allergens[i]["name"] %>"><%= allergens[i]["name"] %></option>
                      <% }%>
                    </select>
                  </div>

                  <div class="field">
                    <label for="preference">Your preferences:</label>
                    <select id="tokenize_preference" name="preference[]" multiple="multiple" class="tokenize-sample">
                      <% for (var i = 0; i < ingredients.length; i++) { %>
                      <option value="<%= ingredients[i]["name"] %>"><%= ingredients[i]["name"] %></option>
                      <% }%>
                    </select>
                  </div>
                  <div class="field">
                    <label for="password">Password :</label>
                    <input id="textinput" name="password" type="text" class="form-control input-md" style="width: 80%;">
                  </div>

                  <div class="button">
                    <!--<button id="singlebutton" name="singlebutton" class="btn btn-info btn-sm pull-right">Sign In</button>-->
                    <button type="submit">Save</button>
                  </div>
                  <!--</div>-->
                </div>



              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>

  </div>

  <script type="text/javascript" src="/plugins/tokenize/jquery.tokenize.js"></script>
</body>
</html>

<script>
$('#tokenize_nonewelement').tokenize({newElements:false});
$('#tokenize_preference').tokenize({newElements:false});
</script>
